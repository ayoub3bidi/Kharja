<?xml version="1.0" encoding="UTF-8"?>

<web-app
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<servlet>
		<servlet-name>Acceuil</servlet-name>
		<servlet-class>Servlets.Acceuil</servlet-class>
	</servlet>
	
	<servlet-mapping>
				<servlet-name>Acceuil</servlet-name>
				<url-pattern>/Acceuil</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Region</servlet-name>
		<servlet-class>Servlets.Region</servlet-class>
	</servlet>
	
	<servlet-mapping>
				<servlet-name>Region</servlet-name>
				<url-pattern>/Region</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>LieuTouristique</servlet-name>
		<servlet-class>Servlets.LieuTouristique</servlet-class>
	</servlet>
	
	<servlet-mapping>
				<servlet-name>LieuTouristique</servlet-name>
				<url-pattern>/LieuTouristique</url-pattern>
	</servlet-mapping>
	
	<jsp-config>
		<jsp-property-group>
		<url-pattern>*.jsp</url-pattern>
		<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
</web-app>